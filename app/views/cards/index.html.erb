<br/>
<div class="main">
	<div class="main-inner">
		<div class="container">

			<div class="row">
				<div class="span4 offset2">
					<div class="widget">
						<div class="widget-content">		
							<%= form_tag 'cards/create' %>
								<h1>Adicione seu cartão</h1>
								
								<div class="login-fields">				
									<p>Adicione seu cartão:</p>				
									<div class="field">
										<label for="code">Código:</label>
										<%= text_field_tag "code", nil, :class => 'input-large', :value => 'Código' %>										
									</div> <!-- /field -->
								</div> <!-- /login-fields -->
								
								<div class="login-actions">									
									<button class="button btn btn-primary btn-large">Adicionar</button>				
								</div> <!-- .actions -->			

								<% if notice %>
									<%= notice %>
								<% end %>
							</form>
						</div>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="span8 offset2">
					<div class="widget">
						<div class="widget-header">
							<i class="icon-signal"></i>
							<h3>Cartões registrados</h3>
						</div>
						<div class="widget-content">
							<table class="table table-striped">
								<thead>
									<tr>
										<th>Cartão</th>
										<th>Pontos</th>
									</tr>
								</thead>
								<tbody>
									<% @cards.each do |c| %>
										<tr>
											<td><%= c.code %></td>
											<td><%= c.created_at %></td>
										</tr>
									<% end %>
								</tbody>								
							</table>		
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>