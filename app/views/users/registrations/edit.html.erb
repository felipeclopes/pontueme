<div id="page-title">

	<div id="page-title-inner">

		<!-- start: Container -->
		<div class="container">

			<h2><i class="ico-stats ico-white"></i>Usuário</h2>

		</div>
		<!-- end: Container  -->

	</div>	

</div>

<div class="wrapper">
	
	<div class="container">
		
		<div class="span4 offset4">
			
			<!-- start: Contact Form -->
			<div id="contact-form">
   
			    <%= devise_error_messages! %>

  				<div class="title"><h1>Atualizar Senha</h1></div>
  
  					<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|%>
        
					    <p>Atualize sua senha:</p>              
					    <%= devise_error_messages! %> 

					    <div class="field">
					      <label for="current_password">Senha Atual:</label>
					        <%= f.password_field :current_password, :class => 'login username-field', :placeholder => 'Senha Atual'  %>
					    </div>

					    <div class="field">
					      <label for="password">Senha:</label>
					        <%= f.password_field :password, :class => 'login username-field', :placeholder => 'Senha'  %>   
					    </div>

					    <div class="field">
					      <label for="password_confirmation">Confirmação:</label>
					        <%= f.password_field :password_confirmation, :class => 'login username-field', :placeholder => 'Confirmação'  %>
					    </div>

					    <%= f.hidden_field :password_changed, :value=>'true' %>

					    </div> <!-- /login-fields -->

						<div class="login-actions">

			        		<%= f.submit "Registrar", :class => "button btn btn-large" %>

			      		</div> <!-- .actions -->

					<% end %>

			  </div> <!-- /contact-form -->

		</div> <!-- /span4 -->

	</div> <!-- /container -->

</div> <!-- /wrapper -->