<div class="account-container">
  
  <div class="content clearfix">
  
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
    <h1>Entrar</h1>
    
    <div class="login-fields">
        
        <p>Entrar com seu negÃ³cio registrado:</p>
        
        <div class="field">
          <label for="email">Nome:</label>
          <%= f.text_field :email, :class => 'login username-field'%>
        </div>

        <div class="field">
          <label for="senha">Senha:</label>
          <%= f.password_field :password, :class => 'login password-field' %>
        </div> <!-- /password -->
        
      </div> <!-- /login-fields -->
      
      <div class="login-actions">                  
        <%= f.submit "Entrar", :class => "button btn btn-warning btn-large" %>        
      </div> <!-- .actions -->
      
  <% end %>

</div> <!-- /content -->
  
</div> <!-- /account-container -->

<script src="../assets/theme/jquery-1.7.2.min.js"></script>

