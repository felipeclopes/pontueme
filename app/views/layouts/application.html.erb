
<!DOCTYPE html> 
<html>
<head>
  <title>Pontueme</title>
  <%= csrf_meta_tags %>
  
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/bootstrap-responsive.min.css" rel="stylesheet">
    
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600" rel="stylesheet">
    <link href="/assets/css/font-awesome.css" rel="stylesheet">
    
    <link href="/assets/css/base-admin.css" rel="stylesheet">
    <link href="/assets/css/base-admin-responsive.css" rel="stylesheet">
    
    <link href="/assets/css/pages/dashboard.css" rel="stylesheet">     
    
    <link href="/assets/css/base-admin.css" rel="stylesheet" type="text/css">
    
    <link href="/assets/css/pages/reports.css" rel="stylesheet">
    <link href="/assets/css/pages/signin.css" rel="stylesheet" type="text/css">
    <link href="/assets/css/pages/plans.css" rel="stylesheet"> 
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
    
        <a class="brand" href="/">
          Pontue.me
        </a>
      
        <div class="nav-collapse" >
          <ul class="nav pull-right" >       
          
            <% if user_signed_in? %>
              <li>
                <%= link_to "Conta", :controller => "user_dashboard", :action => "index" %>              
              </li>
              <li class="divider-vertical"></li>
              <li class="dropdown" >
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <i class="icon-cog"></i>
                  Configurações
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Adicionar Cartões", cards_path %></li>    
                </ul>
              </li>
              <li class="divider-vertical"></li>
              <li>
                <%= link_to "Sair", destroy_user_session_path %>
              </li>

            <% elsif business_signed_in? %>
              <li>
                <%= link_to "Conta", :controller => "business_dashboard", :action => "index" %>              
              </li>
              <li class="divider-vertical"></li>
              <li>
                <%= link_to "Sair", destroy_business_session_path %>
              </li>

            <% else %>
              <li class="dropdown" >
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <i class="icon-user"></i>
                  Usuario
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Entrar", new_user_session_path %></li>
                  <li><%= link_to "Registrar", new_user_registration_path %></li>
                </ul>
              </li>
              <li class="dropdown" >
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <i class="icon-cog"></i>Estabelecimento<b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "Entrar", new_business_session_path %>
                  </li>
                </ul>
              </li>
            <% end %>
          </ul>
      </div>               
    </div>
  </div>
</div>

<%= yield %>

